<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ZmienHaslo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        android:id="@+id/EkranZmienHaslo"
        >

        <ImageView
            android:id="@+id/imageWave1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="-125dp"
            android:alpha=".6"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/shape1"
            app:srcCompat="@drawable/shape1" />

        <ImageView
            android:id="@+id/imageWave2"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_marginBottom="-160dp"
            android:alpha=".6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/shape2"
            app:srcCompat="@drawable/shape2" />

        <ImageView
            android:id="@+id/imageWave3"
            android:layout_width="414dp"
            android:layout_height="560dp"
            android:layout_marginBottom="-190dp"
            android:alpha=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/shape3"
            app:srcCompat="@drawable/shape3" />

        <ImageView
            android:id="@+id/cofnij"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/left_arrow_black" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_icon" />

        <TextView
            android:id="@+id/textZmienHaslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="285dp"
            android:text="@string/zmien_haslo"
            android:textColor="@color/gray_text"
            android:textFontWeight="500"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextAktualneHaslo"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/pole_input"
            android:elevation="2dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:hint="@string/aktualne_haslo"
            android:textColorHint="@color/light_gray_hint"
            android:textColor="@color/gray_text"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNoweHaslo"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/pole_input"
            android:elevation="2dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:hint="@string/nowe_haslo"
            android:textColorHint="@color/light_gray_hint"
            android:textColor="@color/gray_text"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNoweHasloPow"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/pole_input"
            android:elevation="2dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:hint="@string/powtorz_nowe_haslo"
            android:textColorHint="@color/light_gray_hint"
            android:textColor="@color/gray_text"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/zatwierdz"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="560dp"
            android:background="@drawable/przycisk_zatwierdz"
            android:text="@string/zatwierdz"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>