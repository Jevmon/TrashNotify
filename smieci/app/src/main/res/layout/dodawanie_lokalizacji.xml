<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DodawanieLokalizacji"
    android:fillViewport="true"
    android:id="@+id/scrollViewD"

    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:id="@+id/EkranLokalizacji"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:id="@+id/listViewParentG"
        android:layout_width="240dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/layoutGminaWybierz"
        android:orientation="vertical"
        android:background="@drawable/wyszukiwanie_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:elevation="5dp"
        >
        <ListView
            android:id="@+id/list_View_Gminy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="visible"
            android:layout_gravity="top"
            >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listViewParentM"
        android:layout_width="240dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/layoutMiejscWybierz"
        android:orientation="vertical"
        android:background="@drawable/wyszukiwanie_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:elevation="5dp"
        >
        <ListView
            android:id="@+id/list_View_Miejsc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="visible"
            android:layout_gravity="top"
            >

        </ListView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/listViewParentU"
        android:layout_width="240dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/layoutUlicaWybierz"
        android:orientation="vertical"
        android:background="@drawable/wyszukiwanie_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:elevation="5dp"
        >
        <ListView
            android:id="@+id/list_View_Ulica"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="visible"
            android:layout_gravity="top"
            >

        </ListView>
    </LinearLayout>


    <ImageView
        android:id="@+id/cofnij"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow_black" />

    <ImageView
        android:id="@+id/imageWave1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-125dp"
        android:alpha=".6"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/shape1"
        app:srcCompat="@drawable/shape1" />

    <ImageView
        android:id="@+id/imageWave2"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginBottom="-160dp"
        android:alpha=".6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/shape2"
        app:srcCompat="@drawable/shape2" />

    <ImageView
        android:id="@+id/imageWave3"
        android:layout_width="414dp"
        android:layout_height="560dp"
        android:layout_marginBottom="-190dp"
        android:alpha=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/shape3"
        app:srcCompat="@drawable/shape3" />

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/user_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/textDodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="@string/tekst_lokalizacja"
        android:textColor="@color/gray_text"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="660dp"
        android:background="@drawable/przycisk_zatwierdz"
        android:text="@string/zatwierdz"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonUzyjLokalizacji"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/przycisk_zatwierdz"
        android:text="@string/uzyj_loka"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText_Gmina"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:background="@drawable/pole_input"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        android:paddingStart="15dp"
        android:hint="@string/gmina"
        android:textColorHint="@color/light_gray_hint"
        android:textSize="16sp"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGmina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="@string/gmina"
        android:textColor="@color/gray_text"
        android:textFontWeight="500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textMiejscowosc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:text="@string/miejscowosc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/gray_text"
        android:textFontWeight="500"/>

    <TextView
        android:id="@+id/textUlica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="@string/ulica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/gray_text"
        android:textFontWeight="500"/>

    <EditText
        android:id="@+id/editTextMiejscowosc"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/miejscowosc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/pole_input"
        android:padding="12dp"
        android:textColor="@color/gray_text"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:textColorHint="@color/light_gray_hint"/>

    <EditText
        android:id="@+id/editTextUlica"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/ulica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/pole_input"
        android:padding="12dp"
        android:textColor="@color/gray_text"
        android:paddingStart="15dp"
        android:textSize="16sp"
        android:textColorHint="@color/light_gray_hint"/>

    <ImageView
        android:id="@+id/imageEdit3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_text_icon" />

    <ImageView
        android:id="@+id/imageEdit1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_text_icon" />

    <ImageView
        android:id="@+id/imageEdit2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="410dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_text_icon" />

