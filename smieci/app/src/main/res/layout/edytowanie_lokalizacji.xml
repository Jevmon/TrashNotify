<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/EkranEdycjaLokalizacji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="320dp"
            app:layout_constraintVertical_bias="0.3"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/layoutGminaWybierz"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pole_input"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:id="@+id/textGminaWybierz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/gmina"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="40dp"/>

                <ImageView
                    android:id="@+id/imageStrzalka1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/down" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMiejscWybierz"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pole_input"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:id="@+id/textMiejscowoscWybierz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/miejscowosc"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageStrzalka2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/down" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutUlicaWybierz"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/pole_input"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/ulica"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/imageStrzalka"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/down" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/przycisk_zatwierdz"
                android:text="@string/zatwierdz"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="50dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/dark_green_bg"
            android:gravity="center_horizontal"
            tools:context=".EdytowanieLokalizacji">

            <ImageView
                android:id="@+id/cofnij"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/left_arrow_black"
                android:layout_gravity="start"/>

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/user_icon"
                app:srcCompat="@drawable/user_icon" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_name"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/toggleEdycjaDanych"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ToggleButton
                android:id="@+id/toggleLokalizacja"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/toggle_option_informacje"
                android:stateListAnimator="@null"
                android:textOn="@string/informacje"
                android:textOff="@string/informacje"
                android:checked="false"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@drawable/toggle_button_text_color"
                />

            <ToggleButton
                android:id="@+id/toggleInformacje"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textOn="@string/lokalizacja"
                android:textOff="@string/lokalizacja"
                android:background="@drawable/toggle_option_lokalizacja"
                android:stateListAnimator="@null"
                android:checked="true"
                android:textSize="16sp"
                android:textColor="@drawable/toggle_button_text_color"
                android:layout_weight="1"/>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>