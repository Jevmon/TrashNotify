<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"

    android:fitsSystemWindows="true"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:navigationIcon="@drawable/user_icon_vector"

            >

        </androidx.appcompat.widget.Toolbar>


        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.ActionMenuView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/NajblizszyWywoz"
            android:textSize="26sp"
            android:textColor="@color/gray_text"
            android:textFontWeight="700"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/papieryBlok"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/papier_block_bg"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/papieryBlokText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/papiery"
                        android:textSize="22dp"
                        android:textFontWeight="500"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/papieryBlokData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.11"
                        android:textColor="@color/gray_text"
                        android:textFontWeight="500"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/papieryBlokImg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kosz_papier"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/metalBlok"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/papier_block_bg"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/metalBlokText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metal"
                        android:textSize="22dp"
                        android:textFontWeight="500"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/metalBlokData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.11"
                        android:textColor="@color/gray_text"
                        android:textFontWeight="500"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/metalBlokImg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kosz_papier"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/szkloBlok"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/papier_block_bg"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/szkloBlokText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/szklo"
                        android:textSize="22dp"
                        android:textFontWeight="500"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/szkloBlokData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.11"
                        android:textColor="@color/gray_text"
                        android:textFontWeight="500"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/szkloBlokImg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kosz_papier"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bioBlok"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/papier_block_bg"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/bioBlokText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bio"
                        android:textSize="22dp"
                        android:textFontWeight="500"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/bioBlokData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22.11"
                        android:textColor="@color/gray_text"
                        android:textFontWeight="500"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/bioBlokImg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kosz_papier"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

            </LinearLayout>

        </GridLayout>




