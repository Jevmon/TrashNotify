        <LinearLayout
            android:id="@+id/ZasadySegregacji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:id="@+id/ZasadySegregacjiText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ZasadySegregacji"
                android:layout_marginHorizontal="10dp"
                android:textSize="25sp"
                android:textColor="@color/gray_text"
                />

            <LinearLayout
                android:id="@+id/ZasadySegregacjiBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/zasady_segregacji_bio_bg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                >

            <LinearLayout
                android:id="@+id/ZasadySegregacjiBioTytul"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
               >
                <TextView
                    android:id="@+id/ZasadySegregacjiBioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bio"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:layout_marginStart="20dp"
                    android:textSize="22sp"
                    android:textFontWeight="600"
                    />
                <ImageView
                    android:id="@+id/ZasadySegregacjiBioImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/down"
                    />
            </LinearLayout>

                <TextView
                    android:id="@+id/ZasadySegregacjiBioOpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OpisBio"
                    android:textSize="16dp"
                    android:textFontWeight="500"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="20dp"
                    android:visibility="visible"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/ZasadySegregacjiMetale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/zasady_segregacji_bio_bg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                >

                <LinearLayout
                    android:id="@+id/ZasadySegregacjiMetaleTytul"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/ZasadySegregacjiMetaleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metale"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:textFontWeight="600"
                        />
                    <ImageView
                        android:id="@+id/ZasadySegregacjiMetaleImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/down"
                        />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OpisMetal"
                    android:textSize="16dp"
                    android:textFontWeight="500"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ZasadySegregacjiSzklo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/zasady_segregacji_bio_bg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                >

                <LinearLayout
                    android:id="@+id/ZasadySegregacjiSzkloTytul"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/ZasadySegregacjiSzkloText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/szklo"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:textFontWeight="600"
                        />
                    <ImageView
                        android:id="@+id/ZasadySegregacjiSzkloImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/down"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/ZasadySegregacjiSzkloOpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OpisSzklo"
                    android:textSize="16dp"
                    android:textFontWeight="500"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ZasadySegregacjiPapiery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/zasady_segregacji_bio_bg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:id="@+id/ZasadySegregacjiPapieryTytul"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/ZasadySegregacjiPapieryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/papiery"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:layout_marginStart="20dp"
                        android:textSize="22sp"
                        android:textFontWeight="600"
                        />
                    <ImageView
                        android:id="@+id/ZasadySegregacjiPapieryImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/down"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/ZasadySegregacjiPapieryOpis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/OpisPapier"
                    android:textSize="16dp"
                    android:textFontWeight="500"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"/>


            </LinearLayout>





        </LinearLayout>



    </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nawigacja"
        app:itemIconTint="@color/dark_gray"
        app:itemTextColor="@color/dark_green_bg">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>