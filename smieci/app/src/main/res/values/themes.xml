<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Smieci" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green_bg</item>
        <item name="android:textColorPrimary">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <style name="NawigacjaAnimacja">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/light_green</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:weekNumberColor">@color/light_green</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/dark_gray</item>
    </style>


</resources>